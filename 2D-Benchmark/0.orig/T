{
    left
    {
        type           zeroGradient;
    }

    right
    {
        type           zeroGradient;
    }

    bottom
    {
        type            fixedValue;
        value           uniform 290;
    }

    top
    {
        type            fixedValue;
        value           uniform 291.152;
    }

    frontAndBack
    {
        type           empty;
    }
