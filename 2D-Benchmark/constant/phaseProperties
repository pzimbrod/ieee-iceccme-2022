{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

sigma0 0.01;    // N/m
sigma1 0.002;   // N/(m K)

type    massTransferMultiphaseSystem;

phases  (phase1 phase2);

liquid
{
    type            pureMovingPhaseModel;
}

gas
{
    type            pureMovingPhaseModel;
}

surfaceTension
(
    (phase1 and phase2)
    {
        type        temperatureDependent;
        sigma
        {
            type            temperatureDependent;
            sigma           polynomial
            (
                ( $sigma0 0)
                ( $sigma1 1)
            );
        }
    }
);

massTransferModel
(
);

