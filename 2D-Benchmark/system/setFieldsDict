FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

a 1.44e-3;
radius #calc "$a/2";
depth2D 1e-4;

defaultFieldValues
(
    volScalarFieldValue alpha.liquid 1
    volScalarFieldValue alpha.gas 0
);

regions
(
    cylinderToCell
    {
        p1 (0 0 0); p2 ($depth2D 0 0); radius $radius;
        fieldValues
        (
            volScalarFieldValue alpha.liquid 0
            volScalarFieldValue alpha.gas 1
        );
    }
);


// ************************************************************************* //
