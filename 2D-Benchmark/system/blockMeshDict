FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

a 1.44e-3;
xmin #calc "-2 * $a";
xmax #calc "2 * $a";
depth2D 1e-4;

nx = 100;

vertices
(
    (0 $xmin $xmin)
    ($depth2D $xmin $xmin)
    ($depth2D $xmax $xmin)
    (0 $xmax $xmin)
    (0 $xmin $xmax)
    ($depth2D $xmin $xmax)
    ($depth2D $xmax $xmax)
    (0 $xmax $xmax)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (1 $nx $nx) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    left
    {
        //type wall;
        type symmetryPlane;
        faces
        (
            (3 7 6 2)
        );
    }
    right
    {
        //type wall;
        type symmetryPlane;
        faces
        (
            (1 5 4 0)
        );
    }
    bottom
    {
        type patch;
        faces
        (
            (0 3 2 1)
        );
    }
    top
    {
        type patch;
        faces
        (
             (4 5 6 7)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
            (2 6 5 1)
            (0 4 7 3)
        );
    }
);


