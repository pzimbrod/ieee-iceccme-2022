FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

libs ( "libWENOEXT.so" );

application     thermocapillaryInterFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.12;

deltaT          0.00002;

writeControl    adjustable;

writeInterval   0.01;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  no;

maxDeltaT       1;

maxCo           0.6;

maxAlphaCo      0.5;

maxAlphaDdt     2.3;

maxDi           5e0;


